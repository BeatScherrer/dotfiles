" Enable syntax highlighting
syntax on

"wrap text that does not fit on the line
set wrap

" Set tab to have 2 spaces
set tabstop=2
" Expand tabs to spaces
set expandtab

" Highlight mathing pairs
set matchpairs+=<:>

" Line numbers
set number relativenumber

" Display x lines above/below when scrolling
set scrolloff=5

" Display white space
set list
set listchars=tab:>\ ,trail:*,extends:#,nbsp:.

" Enable mouse wheel
set mouse=a

" Enable clipboard
set clipboard=unnamedplus
