(defwindow primary
  :monitor "DP-0"
  :geometry (geometry :x "0%"
                      :y "100px"
                      :width "90%"
                      :height "2%"
                      :anchor "top center"
              )
  :stacking "fg"
  :reserve (struts :distance "40px" :side "top")
  :windowtype "dock"
  :wm-ignore false
  (primaryBar)
)

(defwidget primaryBar []
  (centerbox :orientation "h" :class "bar-container"
    (left)
    (middle)
    (right)
    )
  )

(defwidget left []
  (box 
    :halign "start"
    :space-evenly false
    (button :class "icon-highlight" :onclick "scripts/openlauncher.sh"
      "ï”Ž"
      )
    (workspaces)
  )
)

(defwidget middle []
  (box 
    {time}
    ; (calendar 
