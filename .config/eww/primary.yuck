    ;   :show-day-names true 
    ;   :show-week-numbers true
    ;   )
    )
  )

(defwidget right []
  (box 
    :halign "end"
    (button :class "icon" :onclick "scripts/powermenu.sh"
      "ï€‘"
      )
    )
  )

(include "./widgets/workspaces.yuck")


